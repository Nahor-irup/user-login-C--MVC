@using Model
@model Model.Login_Model

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var SessionMember = new Login_Model();
    if (Session["UserDetails"] != null)
    {
        SessionMember = (Session["UserDetails"] as Login_Model);
    }

}
@Html.Partial("~/Views/Shared/_Alert.cshtml")



<!-- Main content -->
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Reset Password</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { enctype = "form-data", accept_charset = "utf-8" }))
                {
                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Current Password</label>
                            <input type="password" class="form-control" required name="Password" placeholder="Current Password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">New Password</label>
                            <input type="password" class="form-control" id="pass" required name="NewPassword" placeholder="New Password">
                        </div>
                            <label for="exampleInputPassword1">Re-Type Password</label>
                        <div class="form-group input-group">
                            <input type="password" class="form-control" id="repass" required name="Repassword" placeholder="Re-Type Password">
                            <span class="input-group-btn nopadding">
                                <a class="btn" onclick="(showPassword())"><i class="fas fa-eye" id="eye" style="margin-bottom: 15px;"></i></a>
                            </span>
                            <input type="hidden" name="em" value="@SessionMember.Email">
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>
